<?xml version="1.0" encoding="UTF-8"?>
<!-- This file contains the mapping of keyboard keys to actions within Kodi.              -->
<!-- Some commonly used WMC keys are mapped in this custom keymap.                        -->
<keymap>
  <global>
    <keyboard>
      <g mod="ctrl">runscript(special://masterprofile/keymaps/guidekey.py)</g> 
    </keyboard>
    <appcommand>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </appcommand>
    <keyboard>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </keyboard>
  </global>
  <TVGuide>
    <!-- scroll guide up and down with wheel, and left/right with next/prev track -->
    <mouse>
      <wheeldown>Down</wheeldown>
      <wheelup>Up</wheelup>
    </mouse>
    <keyboard>
      <next_track>Right</next_track>
      <prev_track>Left</prev_track>
    </keyboard>
    <appcommand>
      <next_track>Right</next_track>
      <prev_track>Left</prev_track>
    </appcommand>
  </TVGuide>
  <VideoOSD>
    <!-- for some reason we need these in appcommand section for video and OSD !!?? -->
    <appcommand>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </appcommand>
    <mouse>
      <wheeldown>Seek(-2)</wheeldown>
      <wheelup>Seek(2)</wheelup>
    </mouse>
    <keyboard>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </keyboard>
  </VideoOSD>
  <FullScreenVideo>
    <appcommand>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </appcommand>
    <mouse>
      <wheeldown>Seek(-2)</wheeldown>
      <wheelup>Seek(2)</wheelup>
    </mouse>
    <keyboard>
      <next_track>Seek(30)</next_track>
      <prev_track>Seek(-7)</prev_track>
    </keyboard>
  </FullScreenVideo>
</keymap>